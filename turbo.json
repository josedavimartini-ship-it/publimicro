{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "tsconfig.json",
    "tsconfig.base.json",
    ".eslintrc.cjs"
  ],
  "globalEnv": [
    "NODE_ENV",
    "VERCEL_ENV",
    "VERCEL_URL"
  ],
  "tasks": {
    "build": {
      "outputs": [
        "packages/**/dist/**",
        "packages/**/.next/**",
        "apps/**/.next/**",
        "dist/**"
      ]
    },
    "dev": {
      "cache": false
    }
  }
}