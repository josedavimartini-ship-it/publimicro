# =============================================================================
# PUBLIMICRO MONOREPO - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to git!
# =============================================================================

# -----------------------------------------------------------------------------
# Node Environment
# -----------------------------------------------------------------------------
NODE_ENV=development

# -----------------------------------------------------------------------------
# Next.js Public Variables (accessible in browser)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# -----------------------------------------------------------------------------
# Database (Supabase / PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/publimicro
DIRECT_URL=postgresql://user:password@localhost:5432/publimicro

# Supabase (if using)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# -----------------------------------------------------------------------------
# Stripe (Payment Processing)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# -----------------------------------------------------------------------------
# Email (Optional - for notifications)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@publimicro.com.br

# -----------------------------------------------------------------------------
# Storage / CDN (Optional)
# -----------------------------------------------------------------------------
# AWS S3 / Cloudflare R2
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=publimicro-uploads

# -----------------------------------------------------------------------------
# Analytics (Optional)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id

# -----------------------------------------------------------------------------
# Feature Flags (Optional)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_ENABLE_3D_MODELS=true
NEXT_PUBLIC_ENABLE_AUDIO=true
NEXT_PUBLIC_MAINTENANCE_MODE=false

# -----------------------------------------------------------------------------
# API Keys (Optional - Third Party Services)
# -----------------------------------------------------------------------------
GOOGLE_MAPS_API_KEY=your-google-maps-key
OPENCAGE_API_KEY=your-geocoding-key

# -----------------------------------------------------------------------------
# Development Only
# -----------------------------------------------------------------------------
ANALYZE=false
TURBOPACK=true
