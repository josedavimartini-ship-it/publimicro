@tailwind base;
@tailwind components;
@tailwind utilities;

:root{
  --bg:#0f1110;
  --accent:#b5892b; /* warm yellow/dark gold */
  --muted:#9e9b84;
}

html,body,#root{height:100%}
body{
  background:var(--bg);
  color:var(--muted);
  font-family: Inter, ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
}
a{ color:var(--accent); text-decoration:none }
