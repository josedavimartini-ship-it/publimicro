@import "tailwindcss";

:root {
  --bg: #0f1110;
  --accent: #cfa847; /* Publimicro brand gold */
  --accent-light: #e6c86b;
  --accent-dark: #bfa97a;
  --muted: #9e9b84;
  color-scheme: dark;
}

html, body, #__next {
  height: 100%;
  margin: 0;
  padding: 0;
}

body {
  @apply bg-[var(--bg)] text-[var(--muted)] antialiased;
  font-family: Inter, ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

a {
  @apply text-[var(--accent)] no-underline transition-colors hover:text-[var(--accent-light)];
}

/* Custom scrollbar for dark theme */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  @apply bg-neutral-900;
}

::-webkit-scrollbar-thumb {
  @apply bg-neutral-700 rounded hover:bg-neutral-600;
}