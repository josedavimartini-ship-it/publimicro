{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@publimicro/ui": ["../../packages/ui/src"]
    },
    "types": ["react", "react-dom", "node"]
  },
  "include": ["src", "next-env.d.ts", ".next/types/**/*.ts", "../../packages/ui/src"],
  "exclude": ["node_modules", ".next", "dist"]
}